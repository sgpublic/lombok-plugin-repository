<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="log.path" source="application.logging.path"/>

    <contextName>lombok-plugin-repository</contextName>
    <!--自定义日志转换规则，添加颜色高亮支持-->
    <conversionRule conversionWord="colored" converterClass="io.github.sgpublic.kotlin.core.logback.converter.ColoredConverter"/>

    <!--输出到控制台的 appender-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!--自定义过滤器，自动判断 debug 环境-->
        <filter class="io.github.sgpublic.lombokaction.core.logback.ConsoleFilter" />
        <encoder class="io.github.sgpublic.kotlin.core.logback.encoder.ConsolePatternLayoutEncoder">
            <!--自定义格式化日志布局，优化日志定位支持-->
            <pattern>%colored(%d{yyy-MM-dd HH:mm:ss.SSS} %-5level \(%trace\): %msg%n)</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--自定义过滤器，自动判断 debug 环境-->
        <filter class="io.github.sgpublic.lombokaction.core.logback.ConsoleFilter" />
        <!--输出日志到文件-->
        <file>${log.path}/lombok-plugin-repository.log</file>
        <!--设置日志分段-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--设置分段命名规则-->
            <fileNamePattern>${log.path}/%d{yyyy-MM-dd}/lombok-plugin-repository.%i.log</fileNamePattern>
            <!--设置日志最大保留天数-->
            <MaxHistory>30</MaxHistory>
            <!--设置日志最大文件大小-->
            <maxFileSize>1MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%d{yyy-MM-dd HH:mm:ss.SSS} %-5level \(%fulltrace\): %msg%n</pattern>
            </layout>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>
</configuration>